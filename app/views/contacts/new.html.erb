<!-- new.html.erb -->

<div class="headline"><h2>Add a Contact</h2></div>

<% unless @contact.errors.messages.empty? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @contact.errors.messages.each do |field, error| %>
        <li><em><%= "#{field.capitalize} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form" id="new_form">
<%= render "form" %></div>
