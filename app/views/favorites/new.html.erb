<%= form_for [@user, @favorite] do |f| %>
  <%= f.label :headline %>:
  <%= f.text_field :headline %><br />

  <%= f.label :lead_paragraph %>:
  <%= f.text_field :lead_paragraph %><br />

  <%= f.label :pub_date %>:
  <%= f.date_field :pub_date %>

  <%= f.submit "Confirm" %>
<% end %>