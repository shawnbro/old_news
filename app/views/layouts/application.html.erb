<!DOCTYPE html>
<html>
<head>
  <title>OldNews</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
<%= link_to "Home", root_path %>

<% if logged_in? %>
  <p><%= link_to("Log Out #{current_user.first_name}!", "/session", method: "delete") %></p>  
<% else %>
  <p><%= link_to("Log In","/login") %></p>
  <p>or</p>
  <p><%= link_to "Sign up", new_user_path %></p>
<% end %>

</header>

<%= yield %>

</body>
</html>
